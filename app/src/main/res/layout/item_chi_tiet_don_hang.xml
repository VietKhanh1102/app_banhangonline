<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_product"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/anh1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/tv_ten_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ÁO THUN CỔ TRÒN TAY NGẮN"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <!-- LinearLayout để chứa mã sản phẩm và ID sản phẩm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã sản phẩm: "
                android:textColor="@color/grey1"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_id_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="234"
                android:textColor="@color/grey1"
                android:textSize="10sp"
                android:layout_marginStart="5dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cost_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="399.000 VND"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black" />

        <!-- Thêm TextView cho số lượng sản phẩm đã mua -->
        <TextView
            android:id="@+id/tv_quantity_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số lượng: 1"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black" />

    </LinearLayout>
</LinearLayout>
